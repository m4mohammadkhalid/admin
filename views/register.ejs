<!DOCTYPE html>
<html lang="en">
	<%- include("./include/head")%>

<body class="hold-transition theme-primary bg-gradient-primary">
	
	<div class="container h-p100">
		<div class="row align-items-center justify-content-md-center h-p100">
			
			<div class="col-12">
				<div class="row justify-content-center no-gutters">
					<div class="col-lg-4 col-md-5 col-12">
						<div class="content-top-agile p-10">
							<h2 class="text-white">Get started with Us</h2>
							<p class="text-white-50">Register a new membership</p>							
						</div>
						<div class="content-top-agile p-10">
							<%if(errors.length>0){%>
								<%errors.forEach(errors=>{ %>
									<p class="text-white-50"><%=errors.msg%></p>
								<%})%>
							<%}%>
														
						</div>
						<div class="p-30 rounded30 box-shadowed b-2 b-dashed">
							<form action="/register" method="POST">
								<div class="form-group">
									<div class="input-group mb-3">
										<div class="input-group-prepend">
											<span class="input-group-text bg-transparent text-white"><i class="ti-user"></i></span>
										</div>
										<input name="name" type="text" class="form-control pl-15 bg-transparent text-white plc-white" placeholder="Full Name" value=<%if(input){%><%=input.name%><%}%> >
									</div>
								</div>
								<div class="form-group">
									<div class="input-group mb-3">
										<div class="input-group-prepend">
											<span class="input-group-text bg-transparent text-white"><i class="ti-email"></i></span>
										</div>
										<input name="email" type="email" class="form-control pl-15 bg-transparent text-white plc-white" placeholder="Email" value=<%if(input){%><%=input.email%><%}%>>
									</div>
								</div>
								<div class="form-group">
									<div class="input-group mb-3">
										<div class="input-group-prepend">
											<span class="input-group-text bg-transparent text-white"><i class="ti-lock"></i></span>
										</div>
										<input name="password" type="password" class="form-control pl-15 bg-transparent text-white plc-white" placeholder="Password" value=<%if(input){%><%=input.password%><%}%>>
									</div>
								</div>
								  <div class="row">
									<!-- /.col -->
									<div class="col-12 text-center">
									  <button type="submit" class="btn btn-info btn-rounded margin-top-10">SIGN IN</button>
									</div>
									<!-- /.col -->
								  </div>
							</form>													

							<div class="text-center text-white">
							  <p class="mt-20">- Register With -</p>
							  <p class="gap-items-2 mb-20">
								  <a class="btn btn-social-icon btn-round btn-outline btn-white" href="#"><i class="fa fa-facebook"></i></a>
								  <a class="btn btn-social-icon btn-round btn-outline btn-white" href="#"><i class="fa fa-twitter"></i></a>
								  <a class="btn btn-social-icon btn-round btn-outline btn-white" href="#"><i class="fa fa-google-plus"></i></a>
								  <a class="btn btn-social-icon btn-round btn-outline btn-white" href="#"><i class="fa fa-instagram"></i></a>
								</p>	
							</div>

							<div class="text-center">
								<a href="/" class="mt-15 mb-0 text-white">Already have an account?<a href="/" class="text-danger ml-5"> Sign In</a></a>
								
							</div>
						</div>
					</div>
				</div>
			</div>			
		</div>
	</div>


	<!-- Vendor JS -->
	<script src="js/vendors.min.js"></script>
    <script src="../assets/feather.min.js"></script>	
	
	
</body>
</html>
